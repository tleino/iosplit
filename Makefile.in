SHELL = /bin/sh
CFLAGS = -g -Wall -pedantic -std=c99 @SYSTEM_CFLAGS@ @PKGS_CFLAGS@
LDFLAGS = @SYSTEM_LDFLAGS@ @PKGS_LDFLAGS@

prefix = @prefix@
exec_prefix = $(prefix)
bindir = $(exec_prefix)/bin
libdir = $(exec_prefix)/lib
datarootdir = $(prefix)/share
mandir = $(datarootdir)/man

INSTALL ?= install
INSTALLFLAGS ?= -D

SRCS=iosplit.c
PROG=iosplit
MAN=iosplit.1

OBJS=$(SRCS:.c=.o)

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) -o$@ $(OBJS) $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJS) $(PROG)

install: $(PROG)
	$(INSTALL) $(INSTALLFLAGS) $(PROG) $(DESTDIR)$(bindir)/$(PROG)
	$(INSTALL) $(INSTALLFLAGS) -m 444 $(MAN) \
		$(DESTDIR)$(mandir)/man1/$(MAN)

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(PROG)
	rm -f $(DESTDIR)$(mandirdir)/man1/$(MAN)
